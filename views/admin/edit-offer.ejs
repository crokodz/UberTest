<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/common.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main style="margin-top: 40px;">
        <form class="product-form" action="/admin/<% if (editing) { %>edit-offer<% } else { %>add-offer<% } %>" method="POST">
            <div class="form-control">
                <label for="name">Offer Name</label>
                <input type="text" name="name" id="name" value="<% if (editing) { %><%= offer.name %><% } %>">
            </div>
            <div class="form-control">
                <label for="discount">Discount</label>
                <input type="number" name="discount" id="discount" step="0.01" value="<% if (editing) { %><%= offer.discount %><% } %>">
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= offer._id %>" name="offerId">
            <% } %>

            <button  class="btn" type="submit"><% if (editing) { %>Update Offer<% } else { %>Add Offer<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>