<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/common.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main style="margin-top: 40px;">
        <form class="product-form" action="/admin/<% if (editing) { %>edit-category<% } else { %>add-category<% } %>" method="POST">
            <div class="form-control">
                <label for="name">Category Name</label>
                <input type="text" name="name" id="name" value="<% if (editing) { %><%= category.name %><% } %>">
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= category._id %>" name="categoryId">
            <% } %>

            <button  class="btn" type="submit"><% if (editing) { %>Update Category<% } else { %>Add Category<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>